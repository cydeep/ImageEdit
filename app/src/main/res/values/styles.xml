<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/bgColor</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/black_FF5E6066</item>
        <!-- 文字颜色 -->
        <item name="android:textColorPrimary">@color/black_FF5E6066</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/gray</item>
        <item name="editTextColor">@color/gray</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/gray_FAFAFA</item>

        <item name="textAllCaps">false</item>

    </style>

    <style name="ViewLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <style name="EmojiconGridView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:columnWidth">40dp</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:verticalSpacing">0dp</item>
    </style>

    <declare-styleable name="NickMedalView">
        <attr name="nickTextSize" format="integer" />
        <attr name="medalSize" format="dimension" />
    </declare-styleable>
</resources>
